<!DOCTYPE html>
<html>
  <head>
    <title>NewsApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">

      <div class="container">

        <div class="navbar-header">
          <%= link_to  "NewsApp", root_path, class: "navbar-brand" %>
        </div>

        <ul class="nav navbar-nav">
          


        </ul>


        <ul class="nav navbar-nav navbar-right">

          <!-- READER -->

          <% if reader_signed_in? %>
          <li><%= link_to current_reader.name, edit_reader_registration_path %></li>
            <li><%= link_to  "Log Out", destroy_reader_session_path, method: :delete %></li>
          <% end %>


          <!-- ADMIN -->

          <% if admin_signed_in? %>

            <li><%= link_to  "Add Article", new_article_path %></li>
            <li><%= link_to current_admin.name %></li>
            <li><%= link_to  "Log Out", destroy_reader_session_path, method: :delete %></li>
          <% end %>

          <% unless admin_signed_in? || reader_signed_in? %>
            <li><%= link_to  "Log In", new_reader_session_path %></li>
          <% end %>

        </ul>

      </div>

    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
