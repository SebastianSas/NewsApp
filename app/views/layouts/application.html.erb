<!DOCTYPE html>
<html>
  <head>
    <title>NewsApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">

      <div class="container ">

        <% if reader_signed_in? || admin_signed_in? %>

          <div class="navbar-header">
            <%= link_to  "NewsApp", root_path, class: "navbar-brand" %>
          </div>

          <ul class="nav navbar-nav navbar-centre">
            <li><%= link_to "For Me" %></li>
            <li><%= link_to "Trending", articles_path(category: "Top Trending"), class: "trending-link" %></li>        
            <li><%= link_to "Friends" %></li>
            <li><%= link_to "Saved" %></li>
          </ul>

        <% else %>

          <div class="navbar-login">
            <%= link_to  "NewsApp", root_path, class: "navbar-brand navbar-initial" %>
          </div>

        <% end %>

        <ul class="nav navbar-nav navbar-right">

          <!-- READER -->

          <% if reader_signed_in? %>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
              aria-expanded="false">Categories <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% Category.all.each do |category| %>
                  <li class="<%= 'active' if params[:category] == category.name %>">
                    <%= link_to category.name, articles_path(category: category.name), class: "category-link" %>
                  </li>
                <% end %>
              </ul>
            </li>
            <li><%= link_to current_reader.name, edit_reader_registration_path %></li>
            <li><%= link_to  "Log Out", destroy_reader_session_path, method: :delete %></li>

          <% end %> 


          <!-- ADMIN -->

          <% if admin_signed_in? %>

            <li><%= link_to  "Add Article", new_article_path %></li>
            <li><%= link_to current_admin.name, edit_admin_registration_path %></li>
            <li><%= link_to  "Log Out", destroy_reader_session_path, method: :delete %></li>

          <% end %>

        </ul>

      </div>

    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
